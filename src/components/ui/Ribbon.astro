---
export interface Props {
  image?: string;
  offset?: number;
  textColor?: string;
  class?: string;
  as?: string;
}

const {
  image = '/images/banner/navbar.png',
  offset = 35,
  textColor = 'white',
  class: cssClass,
  as: Tag = 'div'
} = Astro.props;
---

<Tag
  class={cssClass}
  style={{
    'border-image-source': `url('${image}')`,
    'border-image-slice': `0 ${offset} fill`,
    'border-image-width': `0px ${offset}px`,
    'border-image-repeat': 'round',
    color: textColor
  }}
>
  <slot />
</Tag>
